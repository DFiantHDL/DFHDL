 \newcommand*{\disabledlinksL}[1]{%
   \begingroup%
   \disablehyperlinks%
   % having trouble with babel's \L command - we're getting an L letter with
   % a diagonal line crossing it... \pL is its protected version.
   \pL{#1}%
   \endgroup%
 }
